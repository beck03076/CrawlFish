$("#coupon-code").dialog({
        autoOpen: true,
        width: 700,
        modal: true,
        draggable:false,
        resizable:false,
        title: 'CrawlFish - Coupon Code!',
        buttons: [
              {
                  text: "CLOSE",
                  className: 'close-button-class',
                  click: function() {
                      $(this).dialog("close");
                      location.reload();
                  }
              }
          ],
        open: function() {
          $("#coupon-code").html("<%= escape_javascript(render('local/coupon_code')) %>");
        }
});

