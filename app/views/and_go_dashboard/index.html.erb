<script type="text/javascript">
function validate(elementId)
{
    var searchkey = document.getElementById(elementId).value.replace(/\s/g, "");
    if (searchkey == "")
    {
        document.getElementById(elementId).value = "";
        setFocus_textbox(elementId);
        return false;
    }
}

function setFocus_textbox(elementId)
{
	if (!document.getElementById)
    {
        return;
    }

    var searchkey = document.getElementById(elementId).value.replace(/\s/g, "");
    if (searchkey == "")
    {
        document.getElementById(elementId).value = "";
    }

    var txtBox = document.getElementById(elementId);
    var txtLength = document.getElementById(elementId).value.length;

    if (txtBox != null)
    {
        txtBox.focus();
        txtBox.setSelectionRange(txtLength,txtLength);
	txtBox.style.border='1px solid #06C';

    }
}

function setNoFocus_textbox(elementId)
{
	if (!document.getElementById)
    {
        return;
    }

    var txtBox = document.getElementById(elementId);
    
    if (txtBox != null)
    {
	txtBox.style.border='1px solid #CCC';

    }
}

function validate_and_go_form()
{
  if (validate_product_name('cf-andgo-middle-content-product-searchtext') == false)
  {
      return false;
  }
  else if (validate_mobile_number('cf-andgo-middle-content-mobilenumber-text') == false)
  {
      return false;
  }
  else if (validate_city_area_name('cf-andgo-middle-content-city-text') == false)
  {
      return false;
  }
}

function validate_mobile_number(elementId)
{
    var searchkey = document.getElementById(elementId).value.replace(/\s/g, "");
    if (searchkey == "")
    {
        document.getElementById(elementId).value = "";
        setFocus_textbox(elementId);
        return false;
    }
    var number = document.getElementById(elementId).value;
    var numberLength = document.getElementById(elementId).value.length;
    if (number.match(/[a-z]+/i) != null){
      setFocus_textbox(elementId);
      return false;
    }
    else if (number.length < 10){
      setFocus_textbox(elementId);
      return false;
    }


}

function validate_product_name(elementId)
{
    var searchkey = document.getElementById(elementId).value.replace(/\s/g, "");
    if (searchkey == "")
    {
        document.getElementById(elementId).value = "";
        setFocus_textbox(elementId);
        return false;
    }
    var productName = document.getElementById(elementId).value;
    var productNameLength = document.getElementById(elementId).value.length;
    if (productName.match(/^[A-Za-z][A-Zaz0-9]*$/) != null){
      setFocus_textbox(elementId);
      return false;
    }
    else if (productNameLength <= 4){
      setFocus_textbox(elementId);
      return false;
    }
}

function validate_city_area_name(elementId)
{
    var searchkey = document.getElementById(elementId).value.replace(/\s/g, "");
    if (searchkey == "")
    {
        document.getElementById(elementId).value = "";
        setFocus_textbox(elementId);
        return false;
    }
    var name = document.getElementById(elementId).value;
    var nameLength = document.getElementById(elementId).value.length;
    if (name.match(/[0-9]+/i) != null){
      setFocus_textbox(elementId);
      return false;
    }
    else if (nameLength <= 2){
      setFocus_textbox(elementId);
      return false;
    }
}

function reset_form()
{
	document.getElementById('cf-andgo-middle-content-product-searchtext').value = "";
	document.getElementById('cf-andgo-middle-content-mobilenumber-text').value = "";
	document.getElementById('cf-andgo-middle-content-city-text').value = "";
	document.getElementById('cf-andgo-middle-content-area-text').value = "";
}

