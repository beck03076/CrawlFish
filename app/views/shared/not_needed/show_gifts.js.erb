$("#gift-form").dialog({
        autoOpen: true,
        width: 700,
        modal: true,
        draggable:false,
        resizable:false,
        title: 'CrawlFish - Gift!',
        buttons: [
              {
                  text: "CLOSE",
                  className: 'close-button-class',
                  click: function() {
                      $(this).dialog("close");
                      $("#home-notification-display").css('display','');
			$("#home-gift-image-mascot").css('display','');
                  }
              }
          ],
        open: function() {
          $("#gift-form").html("<%= escape_javascript(render('shared/gifts')) %>");
	  $("#home-notification-display").css('display','none');
         $("#home-gift-image-mascot").css('display','none');
   	  var x = $(this).position().center + $(this).outerWidth();
          var y = $(this).position().center - $(document).scrollTop();
          $("#gift-form").dialog('option', 'position', [x,y]);
          }
});

