$("#complain").dialog({
  autoOpen: true,
  width: 650,
  height: 600,
  modal: true,
  draggable:true,
  resizable:false,
  title: 'Please forgive us this time and next time, there will be no next time!',
  position: [280,200],
  create: function (event) { $(event.target).parent().css('position', 'fixed');},
  buttons: [
       {
            text: "CLOSE",
            className: 'close-button-class',
            click: function() {
                $(this).dialog("close");
            }
        }
    ],
  open: function() {
    $("#complain").html("<%= escape_javascript(render('shared/complain')) %>");    
    }
});
