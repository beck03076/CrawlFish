
<!-- POPULAR 7 products layout - STARTS -->     
            <div class="border-gray-b">
                <!-- POPULAR 7 porducts header - STARTS -->
                <span class="header-text ">
                    Best sellers - <%= @category_name_7.titleize %>
                </span>
                <div class="comments-text padL5 padB5 border-gray-b">
                    A shuffled list of best sellers from random categories!
                </div>
                
                <div class="padL10 padT10 padB10" align="left">
                <% @pop_7.shuffle.take(7).each_with_index do |i,ind| %>
                   
                 <table>
                  <td class="img-50">
                       <%= link_to image_tag(i.send(@url_7).split(",")[1]),
                                      ["/price",
                                        @category_name_7,
                                        i.name_slug].join("/"),
                                        {:rel => "nofollow"} %>
                  </td>
                  <% disp = truncate(i.send(@name_7),:length=> 30) %>
                  <td valign="center">
                  <% name = truncate(i.send(@name_7),:length=> 30) %>
                        <span class="gray-link-14">
                        <%= links(["/price",
                                        @category_name_7,
                                        i.name_slug],name) %>
                        </span>                             
                                                     
                        <div class="gray-text text-n11">
                            <%= truncate(i.send(@ft).gsub(/#/,", ").gsub(/n.a.,/,"").gsub(/$/,","),:length => 40) %>
                        </div>
                                                     
                  </td>
                </table>
                <% end %>
                </div>
           </div>

<!-- POPULAR PRICE RANGE LAYOUT - ENDS -->                
                <div style="clear:both"></div>
